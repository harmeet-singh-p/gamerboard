                                <Image Opacity="1" Grid.Column="4" HorizontalAlignment="Right" x:Name="gameLogo"   Height="70" Width="180" Margin="30,0,10,0" VerticalAlignment="Top">
                                </Image>
                            </Grid>

                        </Grid>

                        <Grid x:Name="bannerGrid"  Grid.Row="1" Margin="0,10,0,0">
                        </Grid>

                    </Grid>
                </Border>
            </Grid>

